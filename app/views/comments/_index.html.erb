<ul>
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
      <tr>
        <div class="comment-content" id ="this_comment_<%= comment.id %>"></div>
        <td><%= comment.content %></td>
      <% if current_user.id == receipt.user.id %>
        <!-- <td><%#= link_to "編集", edit_receipt_comment_path(receipt, comment), remote: true %></td> -->
        <td><%= link_to "削除", receipt_comment_path(comment.receipt_id, comment.id), method: :delete, remote: true,
                                        data: { confirm: "本当に削除しますか?"} %></td>
      <% end %>
      </tr>
    <% end %>
  <% end %>
</ul>
