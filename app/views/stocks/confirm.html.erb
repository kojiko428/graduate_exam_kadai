<h3>以下の内容で、送信する。</h3>

<p><%= "#{@stock.user.username}さんのストック"%></p> 

<%= form_with(model: @stock, local: true, url: stocks_path ) do |form| %>
  <%= form.hidden_field :item_genre %>
  <%= form.hidden_field :item_name %>
  <%= form.hidden_field :content %>
  <%= form.hidden_field :price %>
  <%= form.hidden_field :image_cache %>
  <%= form.hidden_field :number_of_stock %>

  <p>ジャンル名:<%= @stock.item_genre %></p>
  <p>商品名:<%= @stock.item_name %></p>
  <p>商品詳細:<%= @stock.content %></p>
  <p>価格:<%= @stock.price %></p>

  <p>画像:<%= image_tag(@stock.image.url) if @stock.image && @stock.image.url %> </p>
          <%= form.hidden_field :image_cache %>
  <p>在庫数:<%= @stock.number_of_stock %></p>

  <%= form.submit  "登録する" %>
  <%= form.submit "戻る", name: 'back' %>
<% end %>
